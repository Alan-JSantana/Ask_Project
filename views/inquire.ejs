<%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %>
    
    <div class="container">
        <hr>
        <h1><%= inquire.title %></h1>
        <p><%= inquire.question %></p>
        <hr>
        <form method="post" action="/answer">
            <h3>Resposta</h3>
            <label>Resposta:</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name = "body" required></textarea>
            <input type="hidden" name="inquire" value="<%= inquire.id %>">
            <br>
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% response.forEach(answer => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= answer.body %></p>
                </div>
            </div>
        <% }) %>    
    </div>
</body>    
<footer>

    <%- include('./partials/scripts.ejs') %>
</footer>
