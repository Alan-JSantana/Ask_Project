<%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %>
    
    <div class="container">
        <hr>
        <h1>Questions</h1>
        <a href="/ask" class="btn btn-primary">Inquire</a>
        <hr>
        <% ask.forEach(ask =>{ %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title"><%= ask.title %></h3>
                    <p class="card-text"><%= ask.body %></p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>    
                </div>
                <div class="card-footer">
                    <a href="/inquire/<%= ask.id %>" class="btn btn-primary">View</a>
                </div>    
            </div>
        <% }) %>
    </div>
     
    </body>    
<%- include('./partials/scripts.ejs') %>